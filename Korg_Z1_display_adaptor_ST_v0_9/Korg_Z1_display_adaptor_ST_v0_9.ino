void lcd_wr_(int _mode, int _data){
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////  

  if (_mode == cmnd) pin_RS_cmnd; 
  else pin_RS_data; // clr_CD;
  // Write _data to port
  GPIOA->regs->BRR |= 0b0000000011111111;  
  GPIOA->regs->BSRR |= _data;  
  pin_WR_0; // Latch _data into LCD  
  pin_WR_1;
}  

